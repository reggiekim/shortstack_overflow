<div class="main-container">
  <div class="question">
    <H3>Got a question?</H3>
    <form action='/posts' method='POST'>
      <div class="row">
        <div class="one-third column">
          <label>Title:</label><br>
          <input name='title' type='text'><br>
        </div>
        <div class="one-third column">
          <label>Programming Language:</label><br>
          <select name='language' size="1">
            <option></option>
            <option>HTML</option>
            <option>CSS</option>
            <option>JavaScript</option>
            <option>Ruby</option>
            <option>Other</option>
          </select><br>
        </div>
        <div class="one-third column">
          <label>Your name:</label><br>
          <input name='user_name' type='text'><br>
        </div>
      </div>
      <label>Your question:</label><br>
      <textarea name='body' id="textarea"></textarea><br>
      <button class='button-primary'>Submit Question</button>
    </form>
  </div>
  <div class="all-posts">
    <H3>Popular Posts</H3>
    <table class="u-full-width">
      <thead>
        <tr>
          <th>Upvotes</th>
          <th>Question</th>
          <th>Comments</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |entry| %>
          <tr>
            <td><%= "#{entry["upvotes"]}" %> <img src="/img/uparrow.png" id="uparrow"></td>
            <td>
              <a href="/posts/<%=entry["id"]%>">
              <%= "#{entry["title"]}" %></a>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

