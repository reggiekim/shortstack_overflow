<div class="main-container">
  <div class="each-post"
    <H2><%= @posts["title"] %></H2>
    <p>Language: <%= @posts["language"] %></p>
    <p>Upvotes: <%= @posts["upvotes"] %></p>
    <p><%= @posts["body"] %></p>
    <p>Posted by: <%= @posts["user_id"] %></p>
  </div>
  <div class="answer">
    <H3>Got an answer?</H3>
    <form action='/comments' method='POST'>
      <input type="hidden" name="post_id" value="<%= @posts["id"] %>" />
      <label>Your comment:</label><br>
      <textarea name='body'></textarea><br>
      <label>Your user#:</label><br>
      <input name='user_id' type='text'><br>
      <button class="button-primary">Submit Answer</button>
    </form>
  </div>
  <div class="comments">
    <H3>Responses</H3>
    <table class="u-full-width">
      <thead>
        <tr>
          <th>Answer</th>
          <th>Posted by</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |entry| %>
          <tr>
            <td><%= "#{entry["body"]}" %></td>
            <td><%= "#{entry["user_id"]}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
