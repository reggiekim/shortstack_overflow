<div class="main-container">
  <div class="question">
    <H2>Got a question?</H2>
    <form action='/posts' method='POST'>
      <label>Title:</label><br>
      <input name='title' type='text'><br>
      <label>Programming Language:</label><br>
      <select name='language' size="1">
        <option></option>
        <option>HTML</option>
        <option>CSS</option>
        <option>JavaScript</option>
        <option>Ruby</option>
        <option>Other</option>
      </select><br>
      <label>Your question:</label><br>
      <textarea name='body'></textarea><br>
      <label>Your user#:</label><br>
      <input name='user_id' type='text'><br>
      <button class='button-primary'>Submit Question</button>
    </form>
  </div>
  <div class="all-posts">
    <H2>Popular Posts</H2>
    <table class="u-full-width">
      <thead>
        <tr>
          <th>Upvotes</th>
          <th>Question</th>
          <th>Comments</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |entry| %>
          <tr>
            <td><%= "#{entry["upvotes"]}" %></td>
            <td>
              <a href="/posts/<%=entry["id"]%>">
              <%= "#{entry["title"]}" %></a>
            </td>
            <td><%= "#{entry["comment_counter"]}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

